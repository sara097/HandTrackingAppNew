<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="handtracking.CollectGesturesDataActivity">

    <Button
        android:id="@+id/openBtn2"
        android:layout_width="164dp"
        android:layout_height="62dp"
        android:layout_marginTop="212dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/alegreya"
        android:text="Recognize gestures"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openBtn"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/alegreya"
        android:text="Save gestures"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feedback_btn"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/gesturesBtn"
        android:layout_width="117dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/alegreya"
        android:text="Gestures list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/openBtn2" />

    <Button
        android:id="@+id/feedback_btn"
        android:layout_width="159dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/alegreya"
        android:text="Rock, paper, scisros"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gesturesBtn" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="216dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alegreya"
        android:gravity="center_horizontal"
        android:text="Welcome to Gesture Recognition!"
        android:textSize="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
